<MahApps:MetroWindow x:Class="Badger.Views.BadgerSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:MahApps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BadgerSettingsView" Height="300" Width="300">
    <Grid>
        <MahApps:MetroTabControl x:Name="SettingsOptions">
            <MahApps:MetroTabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayName}"/>
                </DataTemplate>
            </MahApps:MetroTabControl.ItemTemplate>
        </MahApps:MetroTabControl>
    </Grid>
</MahApps:MetroWindow>
